# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET       /                            controllers.Application.index
GET       /data                        controllers.Data.data()
GET       /data/:docId                 controllers.Data.doc(docId:String)
GET       /search                      controllers.Search.search(terms: String, page: Option[Int], filter: Option[String])
GET       /similiar/:id                controllers.Search.similiar(id: String)
GET       /standard/:standard          controllers.Search.standards(standard: String, page: Option[Int])
GET       /new/standards/:standardId   controllers.Standards.standard(standardId: String)
GET       /new/standards               controllers.Standards.standards
OPTIONS   /new/standards               controllers.Application.cors
OPTIONS   /search                      controllers.Application.cors

# Map static resources from the /public folder to the /assets URL path
GET       /assets/*file                controllers.Assets.at(path="/public", file)
